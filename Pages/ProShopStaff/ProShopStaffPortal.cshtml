}
@{
    Layout = "_Layout";
    ViewData["Title"] = "ProShopStaffPortal";
}


@section headerContent
{
    <h1>Welcome to the Book Tee Time Page of Club BAIST System</h1>
}
@section navigationContent
{

    <a href="~/ProShopStaff/ProshopStaff">Back to ProShop Staff Portal</a>
}

@section styleSection
{
<style>
    table {
        background-color: whitesmoke;
    }

    table, td, th, tr {
        border: 1px solid Black;
        border-collapse: collapse;
        text-align: center;
        padding: 8px;
