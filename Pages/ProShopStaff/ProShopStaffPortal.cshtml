    }

        table tr:not(:first-child):hover {
            background-color: rosybrown
        }

    tr {
        cursor: pointer;
        transition: all .25s ease-in-out
    }

    .selected {
        background-color: maroon;
        color: white;
    }

    .CoverPage {
        background-image: url("../Images/ModifyTeeTimeImage.jpeg");
        /* Full height */
        height: 100%;
        /* Center and scale the image nicely */
