@section scriptcontent
{
    <script src="https://code.jquery.com/jquery-2.2.4.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script>
        $(document).ready(function () {


            var dtToday = new Date();

            var month = dtToday.getMonth() + 1;

            var day = dtToday.getDate() + 1;

            var day1 = day + 6;

            var year = dtToday.getFullYear();

            if (month < 10)
                month = '0' + month.toString();

            if (day < 10)
                day = '0' + day.toString();

            var minDate = year + '-' + month + '-' + day;

            var maxDate = year + '-' + month + '-' + day1;

            $('#dateControl').attr('min', minDate);
            $('#dateControl').attr('max', maxDate);
        })
    </script>

    <script type="text/javascript">
        function Validate() {
            var InputFieldTime = window.document.getElementById("InputFieldTime").value;

            if (InputFieldTime.length <= 0) {
                alert("Select a valid tee time from the Tee Sheet!");
                return false;
            }


            return true;
        }

        function ValidateDate() {
            var InputFieldDate = window.document.getElementById("dateControl").value;

            if (InputFieldDate.length <= 0) {
                alert("Select a valid date to display the tee sheet!");
                return false;
            }

            return true;
        }
    </script>
}


<form name="DailyTeeSheetForm" method="post">

    <table>

        <tr>
            <td>Enter Date to request daily tee sheet: </td>
            <td>
                <input type="date" name="InputFieldDate" id="dateControl" value="@Model.InputFieldDate" />
                @Html.ValidationMessage("InputFieldDate")
            </td>
            @*<td><input type="text" name="InputFieldDate" value="@Model.InputFieldDate" /></td>*@
        </tr>
        <tr>
            <td>
                <input type="submit" name="Submit" value="GetDailyTeeSheet" onclick="ValidateDate();" />
            </td>

        </tr>

    </table>
    <br />

    @if (@Model.RequestedTeeSheet.GolfTeeTimes.Count > 0)
    {

        <h1>Select a time from the sheet below to book and fill in the details below:</h1>
        <div style="height: 400px; overflow: auto">
            <table id="table">

                <tr>
                    <td>Date: </td>
                    <td>@Model.RequestedTeeSheet.Date</td>
                    <td>Day of Week: </td>
                    <td>@Model.RequestedTeeSheet.DayOfWeek</td>
                </tr>
                <tr>

                    <th>Golf Time</th>
                    <th>Player 1</th>
                    <th>BookingTimePlayer1</th>
                    <th>Player 2</th>
                    <th>BookingTimePlayer2</th>
                    <th>Player 3</th>
                    <th>BookingTimePlayer3</th>
                    <th>Player 4</th>
                    <th>BookingTimePlayer4</th>
                    <th>No of Carts</th>


                </tr>
                @for (int i = 0; i < Model.RequestedTeeSheet.GolfTeeTimes.Count; ++i)
                {

                    <tr>

                        <td>@Model.RequestedTeeSheet.GolfTeeTimes[i].Time</td>
                        <td>@Model.RequestedTeeSheet.GolfTeeTimes[i].Member1Name</td>
                        <td>@Model.RequestedTeeSheet.GolfTeeTimes[i].BookingDate1</td>
                        <td>@Model.RequestedTeeSheet.GolfTeeTimes[i].Member2Name</td>
                        <td>@Model.RequestedTeeSheet.GolfTeeTimes[i].BookingDate2</td>
                        <td>@Model.RequestedTeeSheet.GolfTeeTimes[i].Member3Name</td>
                        <td>@Model.RequestedTeeSheet.GolfTeeTimes[i].BookingDate3</td>
                        <td>@Model.RequestedTeeSheet.GolfTeeTimes[i].Member4Name</td>
                        <td>@Model.RequestedTeeSheet.GolfTeeTimes[i].BookingDate4</td>
                        <td>@Model.RequestedTeeSheet.GolfTeeTimes[i].NoOfCarts</td>


                    </tr>
                }

            </table>
        </div>
        <script>
            //get selected row
            //display selected row data in text input
            function addRowHandlers() {

                var table = document.getElementById("table"), rIndex;

                for (var i = 0; i < table.rows.length; i++) {
                    table.rows[i].onclick = function () {

                        if (typeof rIndex !== "undefined") {
                            table.rows[rIndex].classList.toggle("selected");
                        }
                        rIndex = this.rowIndex;
                        this.classList.toggle("selected");
                        console.log(rIndex);

                        document.getElementById("InputFieldTime").value = this.cells[0].innerHTML;
                    };
                }
            }
            window.onload = addRowHandlers;
        </script>

    }
    <br />
    <br />
    <table>
        <tr>
            <td>
                Date:
                <input type="text" name="GolfDate" id="GolfDate" value="@Model.GolfDate.ToString("yyyy/M/d")" readonly />
            </td>
            <td>
                Tee Time
                <input type="time" name="InputFieldTime" id="InputFieldTime" value="@Model.InputFieldTime" readonly />
                @Html.ValidationMessage("InputFieldTime")
            </td>
            <td>
                Member Name:
                <input type="text" name="playerName" value="@Model.playername" readonly />
            </td>
            <td>
                No Of Carts:
                <select name="TotalCarts" id="TotalCarts">
                    <option value="0">0</option>
                    <option value="1">1</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" name="Submit" value="BookTeeTime" onclick="Validate();" />
            </td>
        </tr>
    </table>

</form>
