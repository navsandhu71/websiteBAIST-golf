            var Hole7Scores = aForm.Hole7Scores.value;
            var Hole8Scores = aForm.Hole8Scores.value;
            var Hole9Scores = aForm.Hole9Scores.value;
            var Hole10Scores = aForm.Hole10Scores.value;
            var Hole11Scores = aForm.Hole11Scores.value;
            var Hole12Scores = aForm.Hole12Scores.value;
            var Hole13Scores = aForm.Hole13Scores.value;
            var Hole14Scores = aForm.Hole14Scores.value;
            var Hole15Scores = aForm.Hole15Scores.value;
            var Hole16Scores = aForm.Hole16Scores.value;
            var Hole17Scores = aForm.Hole17Scores.value;
            var Hole18Scores = aForm.Hole18Scores.value;
            var GolfDate = aForm.GolfDate.value;


            if (CourseRating.length <= 0 || CourseRating <= 0) {
                alert("Course Rating Required!");
                return false;
            }

            if (SlopeRating.length <= 0 || SlopeRating <= 0) {
                alert("Slope Rating Required!");
                return false;
            }

            if (GolfDate.length <= 0) {
                alert("Select a valid date to record scores!");
                return false;
            }

            if (Hole1Scores.length <= 0 || Hole1Scores <= 0) {
                alert("Hole 1 Scores Required!");
                return false;
            }

            if (Hole2Scores.length <= 0 || Hole2Scores <= 0) {
                alert("Hole 2 Scores Required!");
                return false;
            }
            if (Hole3Scores.length <= 0 || Hole3Scores <= 0) {
                alert("Hole 3 Scores Required!");
                return false;
            }
            if (Hole4Scores.length <= 0 || Hole4Scores <= 0) {
                alert("Hole 4 Scores Required!");
                return false;
            }
            if (Hole5Scores.length <= 0 || Hole5Scores <= 0) {
