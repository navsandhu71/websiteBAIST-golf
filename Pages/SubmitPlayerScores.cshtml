                alert("Hole 6 Scores Required!");
                return false;
            }
            if (Hole7Scores.length <= 0 || Hole7Scores <= 0) {
                alert("Hole 7 Scores Required!");
                return false;
            }
            if (Hole8Scores.length <= 0 || Hole8Scores <= 0) {
                alert("Hole 8 Scores Required!");
                return false;
            }
            if (Hole9Scores.length <= 0 || Hole9Scores <= 0) {
                alert("Hole 9 Scores Required!");
                return false;
            }
            if (Hole10Scores.length <= 0 || Hole10Scores <= 0) {
                alert("Hole 10 Scores Required!");
                return false;
            }
            if (Hole11Scores.length <= 0 || Hole11Scores <= 0) {
                alert("Hole 11 Scores Required!");
                return false;
            }
            if (Hole12Scores.length <= 0 || Hole12Scores <= 0) {
                alert("Hole 12 Scores Required!");
                return false;
            }
            if (Hole13Scores.length <= 0 || Hole13Scores <= 0) {
                alert("Hole 13 Scores Required!");
                return false;
            }
            if (Hole14Scores.length <= 0 || Hole14Scores <= 0) {
                alert("Hole 14 Scores Required!");
                return false;
            }
            if (Hole15Scores.length <= 0 || Hole15Scores <= 0) {
                alert("Hole 15 Scores Required!");
                return false;
            }
            if (Hole16Scores.length <= 0 || Hole16Scores <= 0) {
                alert("Hole 16 Scores Required!");
                return false;
            }
            if (Hole17Scores.length <= 0 || Hole17Scores <= 0) {
                alert("Hole 17 Scores Required!");
                return false;
            }
            if (Hole18Scores.length <= 0 || Hole18Scores <= 0) {
                alert("Hole 18 Scores Required!");
                return false;
            }

            return true;

        }

    </script>
}
