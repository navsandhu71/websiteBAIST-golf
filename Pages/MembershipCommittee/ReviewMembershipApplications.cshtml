<form name="ReviewApplication" method="post">
    <table>
        <tr>
            <td>ApplicationNumber: </td>
            <td>
                <input type="text" name="ApplicationNumber" id="ApplicationNumber" value="@Model.ApplicationNumber" />
                @Html.ValidationMessage("ApplicationNumber")
            </td>

        </tr>

        <tr>
            <td>New Status:</td>
            <td>

                <select name="UpdatedStatus" id="UpdatedStatus">
                    <option value="Waitlisted">Waitlist</option>
                    <option value="Approved">Approve</option>
                    <option value="Denied">Deny</option>
                </select>
            </td>
        </tr>

        <tr>
            <td>
                <input type="submit" name="Submit" value="SubmitDecision" onclick="Validate();" />
            </td>
        </tr>
    </table>

</form>


