@page
@model GolfClubWebsite.Pages.MembershipCommittee.ReviewMembershipApplicationsModel


@{
    Layout = "_Layout";
    ViewData["Title"] = "ReviewMembershipApplications Page";
}

@section headerContent
{
    <h1>Select an option below to review membership applications!</h1>
}


@section navigationContent
{

    <a href="~/MembershipCommittee/MembershipCommittee">Back to MembershipCommittee Portal</a>
}

@section scriptcontent
{
    <script type="text/javascript">
        function Validate() {
            var ApplicationNumber = window.document.getElementById("ApplicationNumber").value;

            if (ApplicationNumber == '' || ApplicationNumber <= 0) {
                alert("Application Number Required!");
                return false;
            }

            return true;
        }
    </script>
}

@section styleSection
{
    <style>
        table, td, th, tr {
            border: 1px solid Black;
            border-collapse: collapse;
            text-align: left;
            padding: 8px;
        }

        .CoverPage {
            background-image: url("../Images/ReviewApplication.jpg");
            /* Full height */
            height: 100%;
            /* Center and scale the image nicely */

            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>

}


<form name="ViewAllSubmittedApplications" method="post">
    <table>
        <tr>
            <td>
                <input type="submit" name="Submit" value="ViewOnHoldMembershipApplications" />
            </td>
